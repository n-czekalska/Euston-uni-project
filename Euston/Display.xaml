<Controls:MetroWindow
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="Euston.Display"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Euston"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        Title="Display" Height="450" Width="650">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Name="MessageID" Grid.Row="0" HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
        <TextBlock Name="MessageBody" Grid.Row="1" HorizontalAlignment="Center"/>

        <Button Name="Close" Content="Close" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Green" FontSize="14" Click="Close_Click"/>
    </Grid>
</Controls:MetroWindow>
